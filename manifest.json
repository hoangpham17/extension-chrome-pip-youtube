{
    "manifest_version": 3,
    "name": "PiP - YouTube PiP",
    "version": "1.0",
    "description": "Toggle Picture-in-Picture for YouTube videos â€” draggable window outside browser.",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://*.youtube.com/*"
    ],
    "action": {
      "default_title": "Toggle PiP"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  }
  
